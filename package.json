    "test-browser": "node test/server.js"
  },
  "dependencies": {
    "chokidar": "^3.1.1",
    "esprima-derby": "^0.1.0",
    "html-util": "^0.2.1",
    "qs": "^6.0.2",
    "racer": "^1.0.0",
    "resolve": "^1.1.6",
    "saddle": "^0.9.7",
    "serialize-object": "^1.0.0",
    "through": "^2.3.4",
    "tracks": "^0.5.0"
  },
  "devDependencies": {
    "async": "^1.5.2",
    "browserify": "^16.2.2",
    "chai": "^4.2.0",
    "express": "^4.13.3",
    "jsdom": "^15.2.0",
    "jshint": "^2.9.5",
    "mocha": "^6.2.0"
  },
  "engines": {
    "node": ">12.0.0"
  },
  "optionalDependencies": {},
  "bugs": {
    "url": "https://github.com/derbyjs/derby/issues"
